<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserMenu">


    <Button
        android:id="@+id/go_to_assortment_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="GoToAssortment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_shape_btn"/>

    <Button
        android:id="@+id/go_to_realization_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="GoToRealization"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_shape_btn"
        app:layout_constraintTop_toBottomOf="@+id/go_to_assortment_user_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>